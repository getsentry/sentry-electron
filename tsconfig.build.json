{
  "extends": "./node_modules/@sentry-internal/typescript/tsconfig.json",
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/preload/*.ts"
  ],
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": ".",
    "lib": [
      "es7",
      "dom"
    ],
    "module": "commonjs",
    "outDir": ".",
    "rootDir": "src",
    "target": "es6",
    "esModuleInterop": true,
  }
}
