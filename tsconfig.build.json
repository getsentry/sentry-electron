{
  "extends": "./node_modules/@sentry-internal/typescript/tsconfig.json",
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/preload/**/*.ts"],
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": ".",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "outDir": ".",
    "rootDir": "src",
    "target": "ES2020",
    "esModuleInterop": true,
    "ignoreDeprecations": "5.0",
    "moduleResolution": "node16"
  }
}
